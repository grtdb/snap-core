#!/usr/bin/env php
<?php

if (! @include_once __DIR__ . '/../vendor/autoload.php') {
    @include_once __DIR__ . '/../../../autoload.php';
}

use Symfony\Component\Console\Application;
use Snap\Commands\Create_Hookable;
use Snap\Commands\Create_Posttype;
use Snap\Commands\Create_Controller;
use Snap\Commands\Create_Shortcode;
use Snap\Commands\Create_Taxonomy;
use Snap\Commands\Create_Ajax;
use Snap\Commands\Publish;

$application = new Application();

$application->add(new Create_Hookable());
$application->add(new Create_Shortcode());
$application->add(new Create_Posttype());
$application->add(new Create_Controller());
$application->add(new Create_Taxonomy());
$application->add(new Create_Ajax());

$application->add(new Publish());

$application->run();