#!/usr/bin/env php
<?php

if (! @include_once __DIR__ . '/../vendor/autoload.php') {
    @include_once __DIR__ . '/../../../autoload.php';
}

use Snap\Commands\Make\Event;
use Symfony\Component\Console\Application;
use Snap\Commands\Make\Hookable;
use Snap\Commands\Make\Controller;
use Snap\Commands\Make\Ajax;
use Snap\Commands\Make\Post_Type;
use Snap\Commands\Make\Taxonomy;
use Snap\Commands\Make\Shortcode;
use Snap\Commands\Publish;

$application = new Application();

$application->add(new Hookable());
$application->add(new Controller());
$application->add(new Ajax());
$application->add(new Post_Type());
$application->add(new Taxonomy());
$application->add(new Shortcode());
$application->add(new Event());

$application->add(new Publish());

$application->run();