<?xml version="1.0"?>
<ruleset name="SnapWP">

    <description>A mixture of PSR2 and WordPress standards</description>

    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <arg name="colors"/>

    <rule ref="PSR2">
        <exclude name="PSR1.Methods.CamelCapsMethodName"/>
        <exclude name="Squiz.Classes.ValidClassName"/>
    </rule>

    <rule name="WordPress.NamingConventions.ValidFunctionName"/>
    <rule name="WordPress.NamingConventions.ValidHookName"/>
    <rule name="WordPress.NamingConventions.ValidVariableName"/>
    <rule name="WordPress.Arrays.ArrayDeclarationSpacing"/>
    <rule name="WordPress.Arrays.ArrayIndentation"/>
    <rule name="WordPress.Arrays.ArrayKeySpacingRestrictions"/>
    <rule name="WordPress.Arrays.CommaAfterArrayItem"/>
    <rule name="WordPress.Arrays.MultipleStatementAlignment"/>
    <rule name="WordPress.DB.PreparedSQLPlaceholders"/>
    <rule name="WordPress.DB.RestrictedClasses"/>
    <rule name="WordPress.DB.RestrictedFunctions"/>
    <rule name="WordPress.NamingConventions.ValidFunctionName"/>
    <rule name="WordPress.NamingConventions.ValidHookName"/>
    <rule name="WordPress.NamingConventions.ValidVariableName"/>
    <rule name="WordPress.PHP.DiscourageGoto"/>
    <rule name="WordPress.PHP.POSIXFunctions"/>
    <rule name="WordPress.PHP.RestrictedPHPFunctions"/>

    <rule name="WordPress.WP.CapitalPDangit"/>
    <rule name="WordPress.WP.I18n"/>
    <rule name="WordPress.WP.PreparedSQL"/>

    <rule name="PEAR.NamingConventions.ValidClassName"/>
    <rule name="Squiz.Strings.ConcatenationSpacing"/>

</ruleset>