{
    "name": "snapwp/snap-core",
    "license": "MIT",
    "description": "Core files for Snap",
    "authors": [
        {
            "name": "Jake Whiteley",
            "email": "jakebwhiteley@gmail.com"
        }
    ],
    "keywords": [
        "wordpress"
    ],
    "autoload": {
        "psr-4": {
            "Snap\\Core\\": "src/"
        },
        "files": ["src/Modules/functions.php"]
    },
    "require": {
        "php": ">=7",
        "composer/installers": "~1.0",
        "jakewhiteley/hodl": "~1.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "~3.0"
    },
    "scripts": {
        "sniff": [
            "phpcs --ignore=vendor --extensions=php --standard=PSR2 ."
        ],
        "fix": [
            "phpcbf --ignore=*/vendor/* --extensions=php --standard=PSR2 ."
        ]
    }
}
